// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

html, body
    height 100%

.whatever
    color: red

.input-large.form-control
    width: 400px

.navbar-fixed-top + .container-fluid
    margin-top 71px

#result-view
    position relative
    padding 0

.card
    position absolute
    display: block
    cursor: pointer
    padding: 4px
    width: 300px
    margin-bottom: 20px
    line-height: 1.42857143
    background-color: #fff
    border: 1px solid #ddd
    border-radius: 4px
    transition: all .1s ease-in-out

    h3
        margin-top 10px
        height 24px


    &:hover, &.selected
        text-decoration: none
        color orange
        border-color orange

        p
            -webkit-transition: all .2s ease-in-out
            transition: all .2s ease-in-out
            color black